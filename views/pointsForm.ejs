        messagingSenderId: "622256382010",
        appId: "1:622256382010:web:305e70e752a5a757c2d503"
    };


    firebase.initializeApp(firebaseConfig);

    let author;

    firebase.auth().onAuthStateChanged(user => {
        
        if (user) {
            author = user.email;
        }
    });

    function test(e) {

        let currentPoints = parseInt(document.getElementById("points").value);
        let currentUser = document.getElementById("currentUser").value;

        e.preventDefault();
        fetch("/modifyPoints", {
            method: "POST",
            headers: {
                Accept: "application/json",
                "Content-Type": "application/json",
                "CSRF-Token": Cookies.get("XSRF-TOKEN"),
            },
            body: JSON.stringify({
                points: currentPoints,
                currentUser,
                author
            }),
        })
            .then(response => {
                window.location = "/pointsForm";
            })
            .catch(function (err) {
                console.log(61, err);
            });
    }
</script>