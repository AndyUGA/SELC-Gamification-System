
<div class="container">
    <div class="row mt-5">
        <div class="col">
            <div class="text-center history-title mb-5">
               History
            </div>

            <table class="table table-responsive-sm">
                <thead>
                    <tr class="text-center">
                        <th scope="col">Attendee</th>
                        <th scope="col">Points</th>
                        <th scope="col">Email</th>
                        <th scope="col">Modified At</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < dataArray.length; i++) { %> 
                     <tr class = "text-center">
                        <td>
                            <%= dataArray[i].attendee %>
                        </td>
                        <td>
                            <%= dataArray[i].points %>
                        </td>
                        <td>
                            <%= dataArray[i].email %>
                        </td>
                        <td>
                            <%= dataArray[i].modified %>
                        </td>
                     </tr>   
                     <% } %>
                    
                
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>
<script>

    document
        .addEventListener("submit", (event) => {
            event.preventDefault();

            let message = event.target[1].value;
            let firstName = event.target[2].value;
            let lastName = event.target[3].value;
            console.log(59, event.target[0].value);
            let request = "approveMessage";
            if(event.target[0].value == "deleteMessage") {
                request = "deleteMessage";
            }
            console.log(72, request);
            return fetch("/" + request, {
                method: "POST",
                headers: {
                    Accept: "application/json",
                    "Content-Type": "application/json",
                    "CSRF-Token": Cookies.get("XSRF-TOKEN"),
                },
                body: JSON.stringify({
                    firstName,
                    lastName,
                    message,
                }),
            })
                .then(() => {
                    console.log("Reloading page");
                    location.reload();

                });

        });



</script>